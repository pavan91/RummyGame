{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
},
    
  "include": ["src", "def/*", "def/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}

